      box-shadow: 0 0 10px rgba(0,0,0,0.2);
      height: 75px;
      margin-left: 50px;
      position: relative;
      width: 500px;
      z-index: 10;
    }

    .banner p {
      color: #fff;
      font: normal 45px 'Josefin Slab';
      line-height: 60px;
      margin: 0;
      padding: 10px;
      text-transform: capitalize;
    }

    .banner:before {
      bottom: -20px;
      border-bottom: 20px solid transparent;
      border-right: 70px solid #555;
      border-top: 0px solid transparent;
      content: "";
      height: 0;
      left: 0px;
      position: absolute;
      width: 0;
    }

    .banner:after {
      content: "";
      position: absolute;
      bottom: -20px;
      right: 0;
      width: 0;
      height: 0;
      border-left: 70px solid #555;
      border-top: 0px solid transparent;
      border-bottom: 20px solid transparent;
    }

