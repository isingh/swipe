      background: #333;
      height: 75px;
      position: absolute;
      width: 120px;
      z-index: 0;
    }

    .ribbon.left {
      left: 0;
      top: 20px;
      z-index: 0;
    }

    .ribbon.left:before {
      border-right: 30px solid #333;
      border-top: 0 solid transparent;
      border-bottom: 37.5px solid transparent;
      content: "";
      height: 0;
      left: -29px;
      position: absolute;
      top: 0;
      width: 0;
    }

    .ribbon.left:after {
      bottom: 0;
      border-bottom: 0 solid transparent;
      border-right: 30px solid #333;
      border-top: 37.5px solid transparent;
      content: "";
      height: 0;
      left: -29px;
      position: absolute;
      width: 0;
    }

    .ribbon.right {
