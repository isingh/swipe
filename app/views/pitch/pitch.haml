- content_for :page_scripts do
  = javascript_include_tag('charting/jquery.flot.js')
  = javascript_include_tag('charting/jquery.flot.pie.js')
  = javascript_include_tag('charting/jquery.flot.time.js')
  = javascript_include_tag('jquery.waypoints.js')
  = javascript_include_tag('jquery.scrollto.js')
  = javascript_include_tag('jquery.easing.js')
  = javascript_include_tag('jquery.pitchdeck.js')

:javascript
  $(document).ready(function() {
    $(document).pitchdeck({
      top_links: '#navigation a',
      easing: 'easeInOutQuart',
      next_button: '.next, .start',
      link_labels: true
    });

    var data = [
      { label: "iOS", data: [[1,32]]},
      { label: "Blackberry", data: [[1,12]]},
      { label: "Windows Mobile", data: [[1,6]]},
      { label: "Other", data: [[1,2]]},
      { label: "Android", data: [[1,49]]}
    ];

    var config = {
      colors: ['#3d6d9c', '#70a35d', '#ebaf56', '#c84342', '#82548b'],
      series: {
        pie: {
          show: true,
          label: {
            show: true,
            radius: 3/4,
            formatter: function(label, series){
              return '<div class="pie-labels">' + label + ' - ' + Math.round(series.percent) + '%</div>';
            }
          }
        }
      },
      legend: {
        show: false
      }
    };

    $.plot($("#consumers"), data, config);

  });
