%div.cafe
%div.login-panel
  %div.rel
    %div.registration-panel
      %p.lead
        Welcome to Swipe!
      %p.slogan
        Start earning rewards for the things you are already doing.
      %a{ :class => 'btn btn-success', :href => new_registration_path(resource_name)}
        Sign Up
      %a.ml10{ :href => '/'}
        Take a Tour

    %div.login-form
      %p.lead
        Sign In
      %hr
      = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        %div
          = f.label :email
          %input{:type => 'text', :name  => 'user[email]', :id => 'user_email', :placeholder => 'user@mail.com'}
        %div
          = f.label :password
          %input{:type => 'password', :name  => 'user[password]', :id => 'user_password', :placeholder => 'Enter password'}
        - if devise_mapping.rememberable?
          %div.remember
            = f.check_box :remember_me
            = f.label :remember_me
        %button{ :class => 'btn', :type => 'submit'}
          Sign In
        = render "devise/shared/links"
