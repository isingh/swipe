%div.cafe
%div.login-panel
  %div.rel
    %div.registration-panel
      %p.lead
        Welcome to Swipe
      %p.slogan
        Starting earning rewards for the things you are already doing.
      %a{ :class => 'btn btn-success', :href => new_registration_path(resource_name)}
        Sign up
      %a.ml10
        Take a Tour

    %div.login-form
      %p.lead
        Sign In
      %hr
      = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        %div
          = f.label :email
          = f.email_field :email
        %div
          = f.label :password
          = f.password_field :password
        - if devise_mapping.rememberable?
          %div.remember
            = f.check_box :remember_me
            = f.label :remember_me
        %button{ :class => 'btn', :type => 'submit'}
          Sign In
        = render "devise/shared/links"
