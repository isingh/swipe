%div.cafe2
%div.login-panel
  %div.rel
    %div.registration-panel
      %p.lead
        Exisitng member?
      %p.slogan
        Do you already have an account with us? Well, sign in already!
      %a{ :class => 'btn', :href => new_session_path(resource_name)}
        Sign In

    %div.login-form
      %p.lead
        Create new account
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        = devise_error_messages!
        %div
          %label Your Name
          %input{:type => 'text', :name  => 'user[first_name]', :id => 'user_first_name', :placeholder => 'Enter name'}
        %div
          = f.label :phone
          %input{:type => 'text', :name  => 'user[phone_number]', :id => 'user_phone_number]', :placeholder => '(555) 555-5555'}
        %div
          = f.label :email
          %input{:type => 'text', :name  => 'user[email]', :id => 'user_email', :placeholder => 'user@mail.com'}
        %div
          = f.label :password
          %input{:type => 'password', :name  => 'user[password]', :id => 'user_password', :placeholder => 'Enter password'}
        %div
          = f.label :password_confirmation
          %input{:type => 'password', :name  => 'user[password_confirmation]', :id => 'user_password_confirmation', :placeholder => 'Confirm password'}
        %button{ :class => 'btn btn-success', :type => 'submit'}
          Okay, I'm done
