  = javascript_include_tag('charting/jquery.flot.js')
  = javascript_include_tag('charting/jquery.flot.pie.js')
  = javascript_include_tag('charting/jquery.flot.time.js')
  = javascript_include_tag('charting/visualize.js')
  = javascript_include_tag('pages/dashboard.js')
